---
const { classList = "", hasArrows = false, hasNavDots = false } = Astro.props;
---

<script>
	import ARSlider from "../archipelago-elements/ARSlider";

	if (customElements.get("ar-slider") === undefined) {
		customElements.define("ar-slider", ARSlider);
	}
</script>
<ar-slider
	has-arrows={hasArrows}
	has-nav-dots={hasNavDots}
	class:list={[...classList.split(" ")]}
>
	<slot />
</ar-slider>
